<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Irregular_Sliding_Puzzle.PlayGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Padding="0,16">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <AppBarButton
                x:Name="Timer"
                HorizontalAlignment="Center"
                Label="00:00">
                <AppBarButton.Icon>
                    <FontIcon Glyph="&#xE916;"/>
                </AppBarButton.Icon>
            </AppBarButton>
            <Button
                Grid.Row="1"
                x:Name="pause"
                Margin="0,0,0,16"
                HorizontalAlignment="Center"
                Click="Pause">
                <FontIcon Glyph="&#xE769;"/>
            </Button>
            <Button
                Grid.Row="1"
                x:Name="resume"
                Visibility="Collapsed"
                Margin="0,0,0,16"
                HorizontalAlignment="Center"
                Click="Resume">
                <FontIcon Glyph="&#xE768;"/>
            </Button>
            <Button
                Grid.Row="2"
                HorizontalAlignment="Center"
                Click="Surrender">
                <BitmapIcon
                    UriSource="ms-appx:///Assets/surrender.png"
                    Height="20"
                    Width="20"/>
            </Button>
        </Grid>
        <ScrollView
            Grid.Column="1"
            CornerRadius="8,0,0,0"
            Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Canvas
                VerticalAlignment="Top"
                HorizontalAlignment="Left">
                <Grid
		            x:Name="mummy"
		            Padding="32"
		            VerticalAlignment="Top"
		            HorizontalAlignment="Left"/>
                <Grid
                    Canvas.ZIndex="1"
                    x:Name="baby"
                    Padding="32"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"/>
            </Canvas>
        </ScrollView>
    </Grid>
</Page>
