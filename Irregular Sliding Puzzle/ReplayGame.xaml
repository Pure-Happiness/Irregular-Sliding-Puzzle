<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Irregular_Sliding_Puzzle.ReplayGame"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Width="288">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <ScrollView>
                <Grid
		            x:Name="target"
		            Padding="32"
		            VerticalAlignment="Top"
		            HorizontalAlignment="Left"/>
            </ScrollView>
            <StackPanel
		        Grid.Row="1"
		        Orientation="Horizontal"
		        HorizontalAlignment="Center">
                <AppBarButton
			        x:Name="resume"
			        x:Uid="Resume"
			        Icon="Play"
			        Click="Resume"/>
                <AppBarButton
			        x:Name="pause"
			        x:Uid="Pause"
			        Visibility="Collapsed"
			        Icon="Pause"
			        Click="Pause"/>
                <AppBarButton
			        x:Name="previous"
			        x:Uid="Previous"
                    IsEnabled="False"
			        Icon="Previous"
			        Click="Previous"/>
                <AppBarButton
			        x:Name="next"
			        x:Uid="Next"
			        Icon="Next"
			        Click="Next"/>
                <ComboBox
			        x:Name="speed"
			        Margin="8,0"
			        VerticalAlignment="Center"
			        SelectedIndex="1"
			        SelectionChanged="ChooseSpeed">
                    <x:String>0.5x</x:String>
                    <x:String>1x</x:String>
                    <x:String>2x</x:String>
                    <x:String>3x</x:String>
                    <x:String>4x</x:String>
                    <x:String>8x</x:String>
                </ComboBox>
            </StackPanel>
        </Grid>
        <ScrollView
		    Grid.Column="1"
		    CornerRadius="8,0,0,0"
		    Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid
		        x:Name="baby"
		        Padding="32"
		        VerticalAlignment="Top"
		        HorizontalAlignment="Left"/>
        </ScrollView>
    </Grid>
</Page>
